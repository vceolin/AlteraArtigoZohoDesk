{
  "name": "__MSG_extTitle__",
  "description": "__MSG_extName__",
  "version": "1.1",
  "manifest_version": 2,
  "default_locale": "pt_BR",
  "permissions": 
  [
    "storage", 
    "*://desk.zoho.com/support/groupsoftwaresolucoes/ShowHomePage.do?articlestatus=latest#Solutions/edit/*",
    "*://analytics.zoho.com/*"
  ],
  "author": "Vitor Ceolin Porf√≠rio Guerra",

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "browser_action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "images/sidesk16.png",
      "32": "images/sidesk32.png",
      "48": "images/sidesk48.png",
      "128": "images/sidesk128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://desk.zoho.com/*"],
      "run_at": "document_idle",
      "all_frames": true,
      "js": ["contentScript.js"]
    },

    {
      "matches": ["*://analytics.zoho.com/*"],
      "run_at": "document_idle",
      "all_frames": true,
      "js": ["contentScriptAnalytics.js"]
    }
  ], 

  "icons": {
    "16": "images/sidesk16.png",
    "32": "images/sidesk32.png",
    "48": "images/sidesk48.png",
    "128": "images/sidesk128.png"
  }  
}